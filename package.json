{
    "name": "swipeforfuture",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.55",
        "@types/react-dom": "^16.9.9",
        "@types/styled-components": "^5.1.4",
        "gh-pages": "^3.1.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-icons": "^3.11.0",
        "react-scripts": "^4.0.0",
        "react-spring": "^8.0.27",
        "react-with-gesture": "^4.0.8",
        "styled-components": "^5.2.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "predeploy": "npm run build",
        "prettify": "npx prettier \"src/**/*\" --write",
        "deploy": "gh-pages -d build",
        "scenario": "ts-node --project scripts/tsconfig.json scripts/build-scenario.ts"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "husky": "^4.3.0",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "styled-components.macro": "^1.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all"
    }
